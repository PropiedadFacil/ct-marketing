
<section class="blog-2">
    <div class="background hidden-xs">
        <div class="container">
            <div class="row">
                <div class="col-sm-4">
                    <div><%= image_tag('gum.jpg') %></div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
    <main>  
        <div class="row">
      <div class="col-sm-7 col-sm-offset-4">
          <div class="promo">
                <h4>Edita tu información.</h4>
                <p>Cambia tu contraseña y otra información de tu cuenta.</p>
            </div>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h5 class="panel-title">Edita Cuenta</h5>
        </div>
          <div class="panel-body">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
            <%= devise_error_messages! %>
        <form role="form">
          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: true, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :Contraseña %> <i>(déjalo en blanco si no quieres cambiarla)</i>
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :Confirma_contraseña %>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :Contraseña_actual %> <i>(necesitamos tu contraseña actual para confirmar tus cambios)</i><br />
            <%= f.password_field :current_password, autocomplete: "off", class: "form-control"  %>
          </div>
          <%= f.submit "Actualizar información", class: "btn btn-primary" %>
        </form>
        </div>
        <div class="panel-footer"><b>¿No quieres recibir geniales ofertas?</b> <hr> <%= button_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "¿Estas segura?" }, method: :delete, class: "btn btn-xs btn-block" %></div>
      </div>
      <% end %>
      </div>
    </div>
  </main>
    </div>
</section>




