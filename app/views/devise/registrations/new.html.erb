
<section class="blog-2">
    <div class="background hidden-xs">
        <div class="container">
            <div class="row">
                <div class="col-sm-4">
                    <div><%= image_tag('gum.jpg') %></div>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
    <main>	
        <div class="row">
		  <div class="col-sm-7 col-sm-offset-4">
	        <div class="promo">
                <h4>Realiza tu cuenta para acceder a nuestros descuentos especiales.</h4>
                <p>Dentro encontrarás todos los descuentos que tenemos para ti.</p>
            </div>
			<div class="panel panel-default">
			  <div class="panel-heading">
			    <h5 class="panel-title">Ingresar</h5>
			  </div>
		      <div class="panel-body">
		        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
		        <%= devise_error_messages! %>
				<form role="form">
				  <div class="form-group">
				    <%= f.label :email %>
				    <%= f.email_field :email, autofocus: true, class: "form-control" %>
				  </div>
				  <div class="form-group">
				    <%= f.label :contraseña %>
				    <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
				  </div>
				  <div class="form-group">
				    <%= f.label :confirma_contraseña %>
				    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
				  </div>
				  <%= f.submit "Ingresar", class: "btn btn-primary" %>
				</form>
			  </div>
			  <div class="panel-footer">¿Ya tienes una cuenta? <%= render "devise/shared/links" %></div>
			</div>
			<% end %>
		  </div>
		</div>
	</main>
    </div>
</section>



